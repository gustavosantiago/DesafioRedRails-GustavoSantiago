<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2 class="text-center">Cadastrar</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "example@org.com" %><br />
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <% if @minimum_password_length %>
          <em>(Senha a partir de <%= @minimum_password_length %> caracteres)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Insira a senha" %><br />
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Repita a senha" %><br />
      </div>

      <div class="actions">
        <%= f.submit "Cadastrar", class: "btn btn-lg btn-success btn-block" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

